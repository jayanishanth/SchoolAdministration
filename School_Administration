import csv

def write_into_csv(info_list):
 with open('student_info.csv', 'a',newline='') as csv_file:
  writer= csv.writer(csv_file)
  writer.writerow(["Name","Age","Contact No.","Email ID"]) 
  writer.writerow(info_list)


condition=True
while(condition):
 student_info=input("Enter student Info in following format (Name Age Contact_No Email_ID):")
 print("Entered Info :" + student_info)
 
 #split
 student_info_list=student_info.split(' ')
 print("Entered split up info is:" + str(student_info_list))
 
 write_into_csv(student_info_list)
 
 
  
 condition_check=input("Enter(yes/no) if you want to enter info for another student: ")
 if condition_check =="yes":
  condition=True
 elif condition_check =="no":
  condition=False
